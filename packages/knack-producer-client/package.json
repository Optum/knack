{
  "name": "@optum/knack-producer-client",
  "version": "0.3.1",
  "description": "A module for producing records with Apache Kafka.",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "repository": "optum/knack",
  "author": {
    "name": "lxghtless",
    "email": "william.kurth@optum.com",
    "url": "github.com/lxghtless"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "xo && nyc ava"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "kafka"
  ],
  "dependencies": {
    "@optum/knack-avro": "^0.3.1",
    "@optum/knack-producer": "^0.3.0",
    "@optum/knack-sr": "^0.3.0",
    "quick-lru": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "nock": "^10.0.6",
    "nyc": "^14.1.0",
    "proxyquire": "^2.1.1",
    "sinon": "^7.3.2",
    "xo": "^0.24.0"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "helpers": [
      "test/utils/**/*.js"
    ],
    "sources": [
      "index.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "environmentVariables": {},
    "tap": false,
    "verbose": true,
    "compileEnhancements": false
  },
  "xo": {
    "rules": {
      "unicorn/catch-error-name": [
        "error",
        {
          "caughtErrorsIgnorePattern": "^_$"
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "capitalized-comments": 0
    }
  }
}
