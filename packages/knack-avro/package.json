{
	"name": "@optum/knack-avro",
	"version": "0.4.0",
	"description": "A module for encoding and decoding avro with Kafka.",
	"license": "Apache-2.0",
	"licenses": [
		{
			"type": "Apache-2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0"
		}
	],
	"repository": "optum/knack",
	"author": {
		"name": "lxghtless",
		"email": "william.kurth@optum.com",
		"url": "https://github.com/lxghtless"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=10.18.0 <11 || >=12.14.0 <13 || >=13.5.0"
	},
	"scripts": {
		"test": "npm run type-check && xo && nyc ava",
		"lint": "npm run type-check && xo --fix",
		"type-check": "tsc -p tsconfig.json --noEmit",
		"build": "rimraf dist && tsc -p tsconfig.build.json"
	},
	"main": "dist/index.js",
	"files": [
		"index.ts",
		"src",
		"dist"
	],
	"keywords": [
		"kafka"
	],
	"dependencies": {
		"@sindresorhus/slugify": "^0.11.0",
		"avsc": "^5.4.18"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.1.0",
		"@types/node": "^13.11.1",
		"@typescript-eslint/eslint-plugin": "^2.28.0",
		"@typescript-eslint/parser": "^2.28.0",
		"ava": "^3.5.0",
		"eslint-config-xo-typescript": "^0.27.0",
		"fs-extra": "^8.1.0",
		"nyc": "^15.0.0",
		"rimraf": "^3.0.2",
		"ts-node": "^8.8.2",
		"ts-sinon": "^1.2.0",
		"typescript": "^3.8.3",
		"xo": "^0.29.1"
	},
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"include": [
			"index.ts",
			"src/**/*.ts"
		]
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register",
			"source-map-support/register"
		],
		"files": [
			"test/*.ts",
			"test/**/*.ts",
			"!test/types.ts"
		],
		"cache": true,
		"concurrency": 5,
		"failFast": true,
		"verbose": true
	},
	"xo": {
		"envs": [
			"node"
		],
		"extends": [
			"xo-typescript"
		],
		"extensions": [
			"ts"
		],
		"prettier": true,
		"semicolon": false,
		"space": 4,
		"rules": {
			"unicorn/catch-error-name": [
				"error",
				{
					"caughtErrorsIgnorePattern": "^_$"
				}
			],
			"unicorn/filename-case": [
				"error",
				{
					"case": "camelCase"
				}
			],
			"capitalized-comments": 0,
			"ava/no-ignored-test-files": 0,
			"ava/no-import-test-files": 0,
			"@typescript-eslint/prefer-readonly-parameter-types": 0
		}
	}
}
